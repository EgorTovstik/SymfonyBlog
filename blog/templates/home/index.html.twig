{% extends 'base.html.twig' %}

{% block title %}Домашняя страница{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('admin.index') }}">Администрирование</a>
    {% for article in articles %}
        <article>
            <h2>{{ article.title }}</h2>
            <div class="article-content">
                {{ article.body|raw|nl2br }}
            </div>

            Дата создания: {{ article.createdAt|date('d.m.Y H:i:s') }}, Автор: {{ article.author }}


                <a class="btn btn-secondary" href="{{ path('app_article_edit', {'id': article.id}) }}">Редактировать</a>



        </article>
    {% endfor %}
</div>
{% endblock %}
